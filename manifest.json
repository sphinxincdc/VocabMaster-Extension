{
  "manifest_version": 3,
  "name": "HORD English Companion",
  "version": "2.53.70",
  "description": "HORD English Companion：划词翻译、生词本管理与复习，支持语境批注、句卡导出和 BYOK。Yesterday, You Said Tomorrow.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://api.cognitive.microsofttranslator.com/*",
    "https://api.dictionaryapi.dev/*",
    "https://api.interpreter.caiyunai.com/*",
    "https://cn.bing.com/*",
    "https://dict.youdao.com/*",
    "https://dictionary.cambridge.org/*",
    "https://mt.cn-hangzhou.aliyuncs.com/*",
    "https://tmt.tencentcloudapi.com/*",
    "https://translate.googleapis.com/*",
    "https://www.collinsdictionary.com/*",
    "https://www.urbandictionary.com/*",
    "https://www.vocabulary.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "HORD English Companion"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "styles.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "version_name": "2.53.70"
}
